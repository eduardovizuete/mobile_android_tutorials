<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="33dp">

            <ImageView
                android:id="@+id/imgCharacter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/test" />

            <View
                android:id="@+id/imgOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/starkOverlay" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/labelTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Jon Snow" />

            <TextView
                android:id="@+id/labelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                tools:text="Lord Comandante de la guardia nocturna" />

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_frey"
            app:fabSize="normal" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personaje"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labelBorn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_born"
            android:drawableLeft="@drawable/ic_born"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            tools:text="283 AC" />

        <TextView
            android:id="@+id/labelActor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_actor"
            android:drawableLeft="@drawable/ic_actor"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            tools:text="Kit Harington" />

        <TextView
            android:id="@+id/labelQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_quote"
            android:drawableLeft="@drawable/ic_quote"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textStyle="italic"
            tools:text="'I know nothing'" />

        <TextView
            android:id="@+id/labelParents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_parents"
            android:drawableLeft="@drawable/ic_parents"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            tools:text="Ned Start" />

        <TextView
            android:id="@+id/labelSpouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_spouse"
            android:drawableLeft="@drawable/ic_spouse"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            tools:text="Sin esposa" />

    </LinearLayout>

</LinearLayout>